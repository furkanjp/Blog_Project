@using Entity_Layer.Concrete
@model List<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<!DOCTYPE html>
<html>

<body>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3">
                    <div class="ibox">
                        <div class="ibox-content product-box">

                            <div >
                                <img src="@item.BlogImage " class="card-img-top img-fluid" alt="">
                               
                            </div>
                            <div class="product-desc">
                                <span class="product-price">
                                    @(((DateTime)item.BlogCreateDate).ToString("dd-MMMM-yyyy"))
                                </span>
                                <small class="text-muted">@item.Category.CategoryName</small>
                                <a href="#" class="product-name"> @item.BlogTitle</a>

                                <div class="small m-t-xs">
                                    @item.BlogContent.Substring(0,item.BlogContent.Substring(0,100).LastIndexOf(" "))...
                                </div>
                                <div class="m-t text-righ">
                                    <div class="m-t text-righ">
                                        <a data-toggle="dropdown" class="btn btn-xs btn-outline btn-primary" >
                                            <span class="block m-t-xs font-bold">Seçenekler</span>
                                           
                                        </a>
                                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                                            <li><a class="dropdown-item" href="/Admin/AdminBlog/DeleteBlog/@item.BlogID">Blogu Sil</a></li>
                                            <li><a class="dropdown-item" href="/Admin/AdminBlog/EditBlog/@item.BlogID">Blogu Düzenle</a></li>
                                        </ul>
                                    </div>
                                   @* <a href="/Blog/BlogReadAll/@item.BlogID/" class="btn btn-xs btn-outline btn-primary">Detaylar <i class="fa fa-long-arrow-right"></i> </a>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

    </div>

</body>

</html>


