@using Entity_Layer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<html>
<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <h5>Roller</h5>
                    </div>
                    <div class="ibox-content">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Rol</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            <a href="#" class="btn btn-danger" onclick="confirmDelete('@item.Id', '@item.Name')">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-warning">Düzenle</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminRole/AddRole/" class="btn btn-primary">Yeni Rol Ekle</a>
                        <a href="/Admin/AdminRole/UserRoleList/" class="btn btn-info">Kullanıcı Rol Listesi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(roleId, Name) {
            if (confirm('"' + Name + '" rolünü silmek istediğinize emin misiniz?')) {
                window.location.href = '/Admin/AdminRole/DeleteRole/' + roleId;
            }
        }
    </script>
</body>
</html>
