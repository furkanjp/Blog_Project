@using Entity_Layer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<html>



<body>
    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">

            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Yorumlar</h5>

                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Başlık</th>
                                    <th>Blog</th>
                                    <th>Puan</th>
                                    <th>Tarih</th>
                                    <th>Sil</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>@item.CommentID</td>
                                        <td>@item.CommentUserName</td>
                                        <td>@item.CommentTitle</td>
                                        <td>@item.Blog.BlogTitle</td>
                                        <td class="text-navy">
                                            @if (item.BlogScore > 5)
                                            {
                                                <i class="fa fa-level-up"></i> @item.BlogScore
                                            }
                                            else
                                            {
                                                <i class="fa fa-level-down"></i> @item.BlogScore
                                            }
                                        </td>
                                        <td>@(((DateTime)item.CommentDate).ToShortDateString()) </td>
                                        <form method="post">
                                        <td><a href="/Admin/AdminComment/Delete/@item.CommentID" onclick="return confirm('Silmek istediğinden emin misin?');" class="btn btn-danger">Sil</a></td>
                                        </form>
                                        
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
