

@{
    ViewData["Title"] = "ComposeMessage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body>
    <div class="wrapper wrapper-content">
        <div class="row">
            <div class="col-lg-3">
                <div class="ibox ">
                    <div class="ibox-content mailbox-content">
                        <div class="file-manager">
                            <a class="btn btn-block btn-primary compose-mail" href="/Admin/AdminMessage/SendBox">Mesaj Kutusu</a>
                            <div class="space-25"></div>
                            <h5>Dosyalar</h5>
                            <ul class="folder-list m-b-md" style="padding: 0">
                                <li><a href="/Admin/AdminMessage/InBox/"> <i class="fa fa-inbox "></i> Gelen Mesajlar </a></li>
                                <li><a href="/Admin/AdminMessage/SendBox/"> <i class="fa fa-envelope-o"></i> Giden Mesajlar</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 animated fadeInRight">
                <div class="mail-box-header">
                    <div class="float-right tooltip-demo">
                       
                      
                    </div>
                    <h2>
                        Yeni Mesaj Oluştur
                    </h2>
                </div>
                <div class="mail-box">

                    <div class="mail-body">

                        <form method="post" action="@Url.Action("ComposeMessage")">

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Alıcı:</label>
                                <select class="form-control" name="ReceiverID">
                                    <option value="">Seçin</option>
                                    @foreach (var receiver in ViewBag.Receivers)
                                    {
                                        <option value="@receiver.Value">@receiver.Text</option>
                                    }
                                </select>
                                @*<label class="col-sm-2 col-form-label">Alıcı:</label>
                                <div class="col-sm-10"><input type="text" class="form-control" name="ReceiverID" /></div>*@
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Konusu:</label>

                                <div class="col-sm-10"> <input type="text" class="form-control" name="Subject" /></div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Mesajınız:</label>
                                <textarea class="form-control" name="MessageDetails" rows="10" cols="10" value="test"></textarea>
                            </div>
                            <div class="float-right tooltip-demo">
                                <button class="btn btn-sm btn-primary"> <i class="fa fa-reply"></i> Gönder</button>
                            </div>
                            <div class="float-left tooltip-demo">

                                <a href="/Admin/AdminMessage/SendBox" class="btn btn-danger btn-sm" data-toggle="tooltip" data-placement="top" title="İptal Et"><i class="fa fa-times"></i> İptal Et</a>
                            </div>
                            
                           
                           
                        </form>
                    </div>
                    <div class="clearfix"></div>
                </div>

            </div>
        </div>
    </div>
</body>

</html>


