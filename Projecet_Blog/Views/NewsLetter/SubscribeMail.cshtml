<div class="tech-btm">
    <p>Yeni bloglardan haberdar ol.</p>
    <form id="subscribeForm">
        <input type="email" id="NMail" placeholder="Email" required="" name="Mail">
        <input type="submit" id="btn1" value="Abone Ol">
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>
<script>
    $(document).ready(function () {
        $("#subscribeForm").submit(function (event) {
            event.preventDefault(); // Formun otomatik olarak gönderilmesini engelle

            let email = $("#NMail").val();

            $.ajax({
                type: "post",
                url: "/NewsLetter/SubscribeMail",
                data: { Mail: email },
                success: function (response) {
                    let result = response;
                    if (result.success) {
                        alert("Aboneliğiniz başarılı şekilde tamamlandı.");
                    }
                }
            });
        });
    });
</script>
