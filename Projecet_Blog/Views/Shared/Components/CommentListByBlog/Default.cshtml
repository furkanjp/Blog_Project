@model IEnumerable<Entity_Layer.Concrete.Comment>


<div class="comment-top">
    <h4>Yorumlar</h4>
    @foreach (var item in Model)
    {
        if (Model.Count() == 0)
        {
            <h2>İlk yorum yapan sen ol.</h2>
        }

        <div class="media">
            <img src="~/blog_tema/images/t3.jpg" alt="" class="img-fluid" />
            <div class="media-body">
                <h5 class="mt-0"> @item.CommentUserName </h5>
                <p>
                    @item.CommentContent
                </p>
            </div>
        </div>


    }
</div>